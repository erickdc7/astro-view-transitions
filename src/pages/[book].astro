---
import Layout from '../layouts/Layout.astro';
import { books } from "../data/books";

const { book } = Astro.params

const info = books.find(b => b.id === book)

if (!info) {
    return Astro.redirect("/404", 404)
}

---

<Layout title={`Libro ${info.title}`}>
    <h1>{info.title}</h1>
</Layout>

